{
  "name": "bongo-fiscal-bridge",
  "version": "1.0.0",
  "description": "Local print microservice for Datecs DP-25 MX fiscal printer via ECR Bridge",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop bongo-fiscal-bridge",
    "pm2:restart": "pm2 restart bongo-fiscal-bridge",
    "pm2:logs": "pm2 logs bongo-fiscal-bridge"
  },
  "keywords": [
    "fiscal",
    "printer",
    "ecr-bridge",
    "datecs",
    "microservice"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
